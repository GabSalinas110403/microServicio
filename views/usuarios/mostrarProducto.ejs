<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1>Productos</h1>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Precio</th>
                        <th>Editar | Borrar</th>
                    </tr>
                </thead>
                <tbody>
                    <%
                        usuarios.forEach((usuario)=>{

                        
                    %>
                    <tr>
                        <td><%= usuario.id %></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.usuario %></td>
                        <td><%= usuario.password %></td>
                        <td>
                            <a href="/editar/<%= usuario.id %>">Editar</a>
                            <a href="/borrar/<%= usuario.id %>">Borrar</a>
                        </td>
                    </tr>
                    
                    <%
                    });
                    %>
                </tbody>
            </table>
        </div>
        <div class="card-footer"></div>
    </div>
</div>
